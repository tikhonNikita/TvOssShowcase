{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": [
      "react-native",
      "jest",
      "styled-components-react-native"
    ],
    "baseUrl": ".",
    "paths": {
      // This needs to be mirrored in babel.config.js
      "theme": [
        "src/theme"
      ]
    },
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error", // or "error"
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ]
  }
}
